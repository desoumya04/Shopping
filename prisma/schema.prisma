generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Seller {
  id        String   @id @default(uuid())

  name      String
  mobile    String? @unique
  email     String   @unique
  password  String

  otp             String?
  otpExpiresAt    DateTime?   // ‚≠ê expiry time
  otpVerified     Boolean     @default(false)

  businessDetails Business[]
  bankDetails     Bank?
  role Role @default(CUSTOMER)
  gstIn      String?  
  accountStatus Account @default(PENDING_VERIFICATION)  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Business {
  id          String   @id @default(uuid())
  sellerId    String   

  name        String
  email       String?
  phone       String?
  
  locality String
  pinCode Int
  state String
  address String
 
  seller      Seller   @relation(fields: [sellerId], references: [id])
}
model Bank {
  id          String   @id @default(uuid())
  sellerId    String @unique

  bankName    String
  accountHolderName  String
  accountNumber String  @unique
  ifcCode    String?
  seller      Seller   @relation(fields: [sellerId], references: [id])
}



enum Role{
  ADMIN
  CUSTOMER
  SELLER
}
enum Account{
  PENDING_VERIFICATION
  ACTIVE
  SUSPENDED
  DEACTIVATE
  BANNED
  CLOSED
}